# === Variables ===
CXX = g++
CXXFLAGS = -std=c++17 -Wall -Wextra
SRC = coord\ copie.cpp main\ copie.cpp
EXEC = simulation

all: $(EXEC)

$(EXEC): $(SRC)
	$(CXX) $(CXXFLAGS) $(SRC) -o $(EXEC)

run: $(EXEC)
	./$(EXEC)

test:
	$(CXX) $(CXXFLAGS) tests/test\ copie.cpp coord\ copie.cpp -o tests/tests

runtest: test
	./tests/tests

clean:
	rm -f *.o $(EXEC) tests/tests